    "bluebird": "3.5.0",
    "config": "1.26.1",
    "node-fetch": "1.7.1",
    "source-map-support": "0.4.15",
    "twit": "2.2.9",
    "yargs": "8.0.1"
  },
  "devDependencies": {
    "babel-cli": "6.24.1",
    "babel-eslint": "7.2.3",
